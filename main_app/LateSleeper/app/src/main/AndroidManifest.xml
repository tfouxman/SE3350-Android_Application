<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twelve.latesleeper">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ViewSpecificEntryActivity"></activity>
        <activity android:name=".activity.ViewJournalActivity" />
        <activity android:name=".activity.CreateGoalSettingsActivity" />
        <activity android:name=".activity.AlarmClockWakeUpActivity" />
        <activity android:name=".activity.ViewSpecificGoalActivity" />
        <activity android:name=".activity.GoalOverviewActivity" />
        <activity android:name=".activity.RefocusActivity" />
        <activity android:name=".activity.RelabelActivity" />
        <activity android:name=".activity.ViewGoalsActivity" />
        <activity android:name=".activity.UserHomeActivity" />
        <activity android:name=".activity.ReframeActivity" />
        <activity android:name=".activity.QuizResultsActivity" />
        <activity android:name=".activity.AccelerometerActivity" />
        <activity android:name=".activity.RevalueActivity" />
        <activity android:name=".activity.SleepResultsActivity" />
        <activity android:name=".activity.LogInActivity" />
        <activity android:name=".activity.CreateAccountActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".activity.MyBroadcastReceiverAlarm" />
        <receiver android:name=".activity.MyBroadCastReceiverNotification" />
    </application>

</manifest>